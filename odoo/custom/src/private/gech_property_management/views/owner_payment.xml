<odoo>
    <data>
        <record id="owner_payment_tree_view" model="ir.ui.view">
            <field name="name">owner.payment.tree.view</field>
            <field name="model">owner.payment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id" string="Owner"/>
                    <field name="payment_type"/>
                </tree>
            </field>
        </record>

        <record id="view_owner_payment_form" model="ir.ui.view">
        <field name="name">owner.payment.form</field>
        <field name="model">owner.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="payment_id" invisible="1"/>
                        <!-- Other fields from account.payment -->
                        <!-- <field name="payment_reference" required="1"/>
                        <field name="payment_method" required="1"/>
                        <field name="payment_notes"/> -->
                        <!-- Owner Payment fields -->
                        <field name="owner_contract_id" required="1"/>
                        <field name="valid_from" required="1"/>
                        <field name="valid_until" required="1"/>
                        <!-- <field name="partner_type" required="1"/>
                        <field name="payment_type" required="1"/> -->
                        <field name="owner_payment_type" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

