<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Top menu item -->
    <menuitem id="gech_property_root" name="Property Management" sequence="0" groups="base.group_user"/>

    <!-- Sub-menu items under the top menu item -->
    <menuitem id="gech_property_property" name="Properties" parent="gech_property_root" sequence="1" />
    <menuitem id="gech_property_contract" name="Contracts" parent="gech_property_root" sequence="2" />

    <!-- Properties sub-menus -->
    <menuitem id="gech_property_building" name="Buildings" parent="gech_property_property" sequence="10" action="gech_property_management.action_property_building"/>
    <menuitem id="gech_property_rental_unit" name="Rental Units" parent="gech_property_property" sequence="20" action="gech_property_management.action_property_building_rental_unit"/>
    <!-- Contracts sub-menus -->
    <menuitem
        id="gech_property_owner_contracts"
        name="Owner Contracts"
        parent="gech_property_contract"
        sequence="10"
        action="gech_property_management.action_owner_contract_type"
        />
    <menuitem
        id="gech_property_tenant_contract"
        name="Tenant Contracts"
        parent="gech_property_contract"
        sequence="20"
        action="gech_property_management.action_tenant_contract_type"
        />
</odoo>
